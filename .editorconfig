root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
max_line_length = 240

[*.{sublime-settings,sublime-commands,sublime-keymap,sublime-menu}]
indent_size = 4
indent_style = tab

[*.jsonc]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

